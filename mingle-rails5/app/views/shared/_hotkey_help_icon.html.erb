<% unless User.current.anonymous? %>
  <% show_notify = !User.current.display_preference(session).read_preference(:clicked_keyboard_help) -%>
  <%= content_tag :li, :onclick => "MingleUI.cmd.toggleHelp(); $j(this).find('.hotkey-notify').remove(); #{show_notify ? "updateUserDisplayPreference('clicked_keyboard_help', true)" : ""}" do %>
    <% if show_notify -%>
      <i class="fa fa-star fa-spin hotkey-notify"></i>
    <% end -%>
    <i class="fa fa-keyboard-o hotkey-help"></i>
  <% end %>
<% end %>