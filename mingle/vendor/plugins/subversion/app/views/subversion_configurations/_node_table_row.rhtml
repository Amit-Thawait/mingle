<tr class="<%= cycle('even', 'odd')%>" id="source_list_<%= node.name %>">
	<td> <% if node.dir? -%>
		<%= link_to node.name, {:path => node.path_components, :rev => view_revision}, {:class => 'folder node-link'} %>
		<% else -%>
		<%= link_to node.name, {:path => node.path_components, :rev => view_revision}, { :class => 'file node-link'} %>
		<% end -%>
	</td>
	<td style='text-align:right'><%= h node.file_length %>&nbsp;</td>
  <td><%= link_to h(node.revision_number), repository_revision_url(:rev => node.revision_number) %></td>
  <td><%=h node.revision_user %></td>
  <td><%= time_ago_in_words node.revision_time %></td>
  <td class="last"><%= replace_card_links(h(node.revision_log)) %></td>
</tr>