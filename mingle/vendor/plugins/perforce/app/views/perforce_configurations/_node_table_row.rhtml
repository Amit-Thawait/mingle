<tr class="<%= cycle('even', 'odd')%>" id="source_list_<%= node.name %>">
  <% if node.dir? -%>
  	<td> 	<%= link_to node.name, {:path => node.path_components, :rev => view_revision}, {:class => 'folder node-link'} %> </td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td class="last">&nbsp;</td>	
	
	<% else -%>
	
  	<td><%= link_to node.name, {:path => node.path_components, :rev => view_revision}, { :class => 'file node-link'} %> </td>
  	
  	<td> <%=h node.file_info.head_rev %></td>

  	<td style='text-align:right'><%= h node.file_length %>&nbsp;</td>
  	
  	<td><%= time_ago_in_words node.last_modified_time %></td>
  	
  	<td>
  	  <%= link_to h(node.file_info.head_change), changelist_url(:rev => node.file_info.head_change) %>
  	</td>
    
    <td><%=h node.file_info.head_action %></td>
    
    <td class="last"><%=replace_card_links(h(node.file_info.head_type)) %></td>
  <% end -%>
</tr>
