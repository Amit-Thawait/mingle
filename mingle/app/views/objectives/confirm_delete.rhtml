<%- select_tab :timeline -%>
<%- content_for :page_header do -%>
  <div class="page_header" id='page_navigator'>
    <h1><%= @objective.name %> &raquo; Remove from plan</h1>
  </div>
<%- end -%>

<div class="confirm_objective_delete">
  <%= render :partial => 'shared/irrecoverable_warning' %>
  <% info_box do %>
    <p><b>Moving</b> this feature to your backlog will remove all content and project associations.</p>
    <p><b>Deleting</b> this feature will erase it completely from your program but will not impact your programâ€™s plan or projects.</p>
  <% end %>
  <% action_bar do %>
    <% form_tag(program_plan_objective_path(@plan.program, @objective, :move_to_backlog => true), { :method => :delete}) do -%>
      <%= submit_tag 'Move to Backlog',{:class => 'primary float_left'}%>
    <% end -%>
    <% form_tag(program_plan_objective_path(@plan.program, @objective), { :method => :delete}) do -%>
      <%= submit_tag 'Delete', {:class => 'secondary float_left'} %>
    <% end -%>
    <%= link_to 'Cancel', program_plan_url(@program, @plan), {:class => 'link_as_button float_left'} %>
  <% end %>
</div>