<% if deliverables.empty? %>
  <% info_box :id => "no-#{model}s" do %>
    <div class='clear_float'>
      <% if User.current.admin? && CurrentLicense.status.valid? %>
        <div id="no-<%= model %>s-in-instance-warning">
          There are no <%= model %>s in your Mingle instance â€“ <%= link_to("Create the first #{model} now", { :action => 'new' })%> or click <%= render_help_link("Creating Mingle #{model.capitalize}s", :class => '',:content => 'here')%> for more information.
        </div>
      <% else %>
        <div id='no-<%= model %>s-available-warning'>
          You are currently not a member of any <%= model %>.
        </div>
      <% end %>
      <%= clear_float %>
    </div>
  <% end %>
<% end -%>
