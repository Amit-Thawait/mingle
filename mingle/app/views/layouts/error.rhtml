<html>
<head>
  <meta http-equiv="Content-Style-Type" content="text/css" />
  <title><%= page_title %></title>
  <%= javascript_include_tag("sprockets_app") %>
  <%= stylesheet_link_tag("sprockets_app") %>
  <link rel="shortcut icon" href="<%= image_path('/favicon.ico') %>" />
</head>

<body>
  <div id="doc" class="<%= if @sidebar then 'yui-t6' else 'yui-t7' end %>">
    <%= render :partial => 'layouts/application_hd', :locals => { :hide_login => true } %>

    <div id="bd">
      <div id="yui-main">
        <div class="yui-b" id="main">
          <div class="main_inner">
          <%= yield %>
          </div>
        </div>
      </div>
    </div>
</div>

  <%= render_buffered_javascript %>
</body>

</html>
